<h1>Редактировать {{restaurants.title}}</h1>

<form action="/editrestaurant" method="POST">
    <div class="input-field col s6">
        <h6>Название ресторана</h6>
        <input id="title" type="text" class="validate" name="title" value="{{restaurants.title}}">
        <label class="active" for="title"></label>
    </div>
    <div class="input-field col s6">
        <h6>Количество $$$</h6>
        <input id="value" type="text" class="validate" name="value" value="{{restaurants.value}}">
        <label class="active" for="value"></label>
    </div>
    <div class="input-field col s6">
        <h6>Ссылка на картинку</h6>
        <input id="img" type="text" class="validate" name="img" value="{{restaurants.img}}">
        <label class="active" for="img"></label>
    </div>
    <div class="input-field col s6">
        <h6>Описание</h6>
        <input id="desc" type="text" class="validate" name="desc" value="{{restaurants.desc}}">
        <label class="active" for="desc"></label>
    </div>
    <div class="input-field col s6">
        <h6>Время работы</h6>
        <div>
            <label class="active" for="timeWorkMonday">Понедельник</label>
            <input id="monday" type="text" class="validate" name="timeWorkMonday"
                value="{{restaurants.timeWorkMonday}}">
        </div>
        <div>
            <label class="active" for="timeWorkTuesday">Вторник</label>
            <input id="tuesday" type="text" class="validate" name="timeWorkTuesday"
                value="{{restaurants.timeWorkTuesday}}">
        </div>
        <div>
            <label class="active" for="timeWorkWednesday">Среда</label>
            <input id="wednesday" type="text" class="validate" name="timeWorkWednesday"
                value="{{restaurants.timeWorkWednesday}}">
        </div>
        <div>
            <label class="active" for="timeWorkThursday">Четверг</label>
            <input id="thursday" type="text" class="validate" name="timeWorkThursday"
                value="{{restaurants.timeWorkThursday}}">
        </div>
        <div>
            <label class="active" for="timeWorkFriday">Пятница</label>
            <input id="friday" type="text" class="validate" name="timeWorkFriday"
                value="{{restaurants.timeWorkFriday}}">
        </div>
        <div>
            <label class="active" for="timeWorkSaturday">Суббота</label>
            <input id="saturday" type="text" class="validate" name="timeWorkSaturday"
                value="{{restaurants.timeWorkSaturday}}">
        </div>
        <div>
            <label class="active" for="timeWorkSunday">Воскресенье</label>
            <input id="sunday" type="text" class="validate" name="timeWorkSunday"
                value="{{restaurants.timeWorkSunday}}">
        </div>
    </div>
    <div class="input-field col s6">
        <h6>Блюда:</h6>
        <input type="text" class="validate" name="dishes" value="{{restaurants.dishes}}">
        <label for="dishes"></label>
        <input type="text" class="validate" name="dishes1" value="{{restaurants.dishes1}}">
        <label for="dishes1"></label>
        <input type="text" class="validate" name="dishes2" value="{{restaurants.dishes2}}">
        <label for="dishes2"></label>
        <input type="text" class="validate" name="dishes3" value="{{restaurants.dishes3}}">
        <label for="dishes3"></label>
        <input type="text" class="validate" name="dishes4" value="{{restaurants.dishes4}}">
        <label for="dishes4"></label>
        <input type="text" class="validate" name="dishes5" value="{{restaurants.dishes5}}">
        <label for="dishes5"></label>
        <input type="text" class="validate" name="dishes6" value="{{restaurants.dishes6}}">
        <label for="dishes6"></label>
        <input type="text" class="validate" name="dishes7" value="{{restaurants.dishes7}}">
        <label for="dishes7"></label>
        <input type="text" class="validate" name="dishes8" value="{{restaurants.dishes8}}">
        <label for="dishes8"></label>
        <input type="text" class="validate" name="dishes9" value="{{restaurants.dishes9}}">
        <label for="dishes9"></label>
        <input type="text" class="validate" name="dishes10" value="{{restaurants.dishes10}}">
        <label for="dishes10"></label>
    </div>
    <div class="input-field col s6">
        <h6>Тип ресторана</h6>
        <input id="type" type="text" class="validate" name="type" value="{{restaurants.type}}">
        <label class="active" for="type"></label>
    </div>

    <div class="input-field col s6">
        <h6>Ссылка на картинку в Main</h6>
        <input id="img1" type="text" class="validate" name="img1" value="{{restaurants.img1}}">
        <label class="active" for="img1"></label>
    </div>
    <div class="input-field col s6">
        <h6>Ссылка на картинку в Main</h6>
        <input id="img2" type="text" class="validate" name="img2" value="{{restaurants.img2}}">
        <label class="active" for="img2"></label>
    </div>
    <div class="input-field col s6">
        <h6>Ссылка на картинку в Main</h6>
        <input id="img3" type="text" class="validate" name="img3" value="{{restaurants.img3}}">
        <label class="active" for="img3"></label>
    </div>
    <div class="input-field col s6">
        <h6>Ссылка на картинку в Main</h6>
        <input id="img4" type="text" class="validate" name="img4" value="{{restaurants.img4}}">
        <label class="active" for="img4"></label>
    </div>

    <input type="hidden" name="id" value="{{restaurants._id}}">
    <button type="submit" class="btn btn-small">Отредактировать</button>
</form>